<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="10dp"
    android:showDividers="middle|beginning|end">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/placeimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/capitol" />

            <TextView

                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeimage"
                android:maxLines="3"
                android:padding="8dp"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:text="Des Moines Apartments" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:maxLines="3"
                android:padding="8dp"
                android:text="This is a really long description of the total thing I'm describing.  This should be a lorum ipsum but instead it is a rant.  Thanks!  This is a really long description of the total thing I'm describing.  This should be a lorum ipsum but instead it is a rant.  Thanks!"
                android:textColor="#666"
                android:textSize="14dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>